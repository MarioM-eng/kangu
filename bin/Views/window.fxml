<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ContainerController">
   <top>
      <VBox prefWidth="1000.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <fx:include source="toolbar.fxml" />
         </children>
      </VBox>
   </top>
   <center>
      <HBox fx:id="container" alignment="CENTER" prefWidth="1000.0" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <VBox fx:id="pButtons" alignment="TOP_CENTER" prefHeight="200.0" styleClass="backGround-blue" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAppointments" mnemonicParsing="false">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-blue" />
               </styleClass>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/white/calendar.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Calendario" />
               </tooltip>
            </Button>
            <Separator />
            <Button fx:id="btnUsers" mnemonicParsing="false">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-blue" />
               </styleClass>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/white/002-admin.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Usuarios" />
               </tooltip>
            </Button>
            <Separator />
            <Button fx:id="btnPatients" mnemonicParsing="false">
               <styleClass>
                  <String fx:value="btn" />
                  <String fx:value="btn-blue" />
               </styleClass>
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/white/009-user.png" />
                     </image>
                  </ImageView>
               </graphic>
               <tooltip>
                  <Tooltip text="Pacientes" />
               </tooltip>
            </Button>
         </children>
      </VBox>
   </left>
</BorderPane>
