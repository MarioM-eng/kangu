<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchor" stylesheets="@css/styles.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <StackPane AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
         <children>
            <VBox>
               <children>
                  <ScrollPane>
                     <content>
                        <AnchorPane>
                           <children>
                              <VBox layoutX="15.0" layoutY="22.0">
                                 <children>
                                    <Label text="Perfiles">
                                       <font>
                                          <Font name="Berlin Sans FB" size="12.0" />
                                       </font>
                                    </Label>
                                    <VBox>
                                       <children>
                                          <ComboBox fx:id="cbProfiles" prefWidth="150.0" />
                                          <Label fx:id="mensajeNameLb" styleClass="label-error" text="error">
                                             <font>
                                                <Font size="10.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </VBox>
                                 </children>
                              </VBox>
                              <HBox alignment="CENTER" layoutX="30.0" layoutY="93.0" prefWidth="200.0" spacing="5.0" styleClass="btn-group">
                                 <children>
                                    <Button fx:id="btnAdd" mnemonicParsing="false" textFill="WHITE">
                                       <graphic>
                                          <ImageView fitHeight="20.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../Images/white/005-add.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                       <styleClass>
                                          <String fx:value="btn-blue" />
                                          <String fx:value="btn" />
                                       </styleClass>
                                    </Button>
                                    <Button fx:id="btnRemove" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" textFill="WHITE">
                                       <graphic>
                                          <ImageView fitHeight="20.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                                             <image>
                                                <Image url="@../Images/white/005-add.png" />
                                             </image>
                                          </ImageView>
                                       </graphic>
                                       <cursor>
                                          <Cursor fx:constant="HAND" />
                                       </cursor>
                                       <styleClass>
                                          <String fx:value="btn-red" />
                                          <String fx:value="btn" />
                                       </styleClass>
                                    </Button>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </AnchorPane>
                     </content>
                  </ScrollPane>
                  <VBox spacing="10.0">
                     <children>
                        <ScrollPane style="-fx-border-color: transparent;">
                           <content>
                              <TableView fx:id="tblElements" prefHeight="180.0" />
                           </content>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ScrollPane>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </StackPane>
   </children>
</AnchorPane>
