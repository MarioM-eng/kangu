<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>


<Pane styleClass="border-green" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="BOTTOM_LEFT" prefHeight="64.0" prefWidth="345.0" spacing="10.0">
         <children>
            <VBox prefHeight="200.0">
               <children>
                  <Label text="Especialidad" />
                  <HBox>
                     <children>
                        <ComboBox fx:id="cbSpecialty" prefHeight="25.0" prefWidth="214.0" promptText="Elegir" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox prefHeight="200.0">
               <children>
                  <Label text="Profesional" />
                  <HBox prefHeight="100.0">
                     <children>
                        <ComboBox fx:id="cbProfession" prefHeight="25.0" prefWidth="218.0" promptText="Elegir" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Button fx:id="btnAdd" layoutX="354.0" layoutY="26.0" mnemonicParsing="false" text="Agregar">
         <styleClass>
            <String fx:value="btn-large" />
            <String fx:value="btn-blue" />
            <String fx:value="btn" />
         </styleClass>
      </Button>
      <VBox layoutX="15.0" layoutY="64.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="btnRemove" layoutX="169.0" layoutY="10.0" mnemonicParsing="false">
                     <cursor>
                        <Cursor fx:constant="DEFAULT" />
                     </cursor>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Images/white/004-trash.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <styleClass>
                        <String fx:value="btn-red" />
                        <String fx:value="btn" />
                     </styleClass>
                  </Button>
               </children>
            </HBox>
            <TableView fx:id="tbElements" prefHeight="100.0" prefWidth="200.0" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</Pane>
